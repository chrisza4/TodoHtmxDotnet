@model TodoHtmx.Web.ViewModels.Modal

<div class="modal modal-blur fade show" style="display: block;" aria-hidden="false" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Title</h5>
            </div>
            <div class="modal-body">
                <p>@Model.Content</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @(Model.HtmxRequest.Value)="@Model.HtmxUrl"  hx-target="@Model.HtmxTarget">Confirm</button>
                <button type="button" class="btn btn-secondary" hx-get="/CloseModal" hx-target="#modals-here">Close</button>
            </div>
        </div>
    </div>
</div>
